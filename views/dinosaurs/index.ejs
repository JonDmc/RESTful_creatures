<form action="/dinosaurs" method="get">
    <label for="nameFilter">Filter by Name:</label>
    <input type="text" name="nameFilter" id="nameFilter">
    <button type="submit">Filter Results</button>
</form>
<ul>
    <% myDinos.forEach((dino, i) => { %>
     <li> 
         <%= dino.name %> is a <%= dino.type %>  
     </br>
        <form action="/dinosaurs/edit/<%= i %>" style="display: inline;">
            <button type="submit">Edit</button>
        </form>
         <form action="/dinosaurs/<%= i %>/?_method=DELETE" method="post" style="display: inline;">
             <button type="submit">Delete</button>
         </form>
    </li>
    <% }) %>
</ul>

<form action="/dinosaurs/new">
    <button type="submit">Add a new Dino!</button>
</form>